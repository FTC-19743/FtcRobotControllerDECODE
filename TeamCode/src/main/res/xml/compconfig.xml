<?xml version='1.0' encoding='UTF-8' standalone='yes' ?>
<Robot type="FirstInspires-FTC">

    <!-- OctoQuad Ports
        0 - Forward Odometry
        1 - Strafe Odometry
        3 - Pusher Encoder
    -->
    <EthernetDevice name="limelight" serialNumber="EthernetOverUsb:eth0:172.29.0.30" port="0" ipAddress="172.29.0.1" />
    <Webcam name="webcamleft" serialNumber="12D5F020" />
    <Webcam name="webcamfront" serialNumber="F4D6B65F" />
    <Webcam name="webcamright" serialNumber="989ECEC0" />

    <LynxUsbDevice name="Control Hub Portal" serialNumber="(embedded)" parentModuleAddress="173">
        <LynxModule name="Expansion Hub 2" port="2">
            <goBILDA5202SeriesMotor name="frm" port="0" />
            <goBILDA5202SeriesMotor name="brm" port="1" />
            <goBILDA5202SeriesMotor name="rightflywheel" port="2" />
            <goBILDA5202SeriesMotor name="leftflywheel" port="3" />

            <RevBlinkinLedDriver name="blinkin" port="0"/>
            <ContinuousRotationServo name = "pusher" port = "3" />

            <Servo name = "rgbright" port = "2" />
            <Servo name = "rightflipper" port = "4" />
            <Servo name = "pushup" port = "5" />

            <AnalogInput name = "pusherPotentiometer" port ="0"/>

            <RevColorSensorV3 name="floorcolorsensor" port="0" bus="0" />
<!--            <RevColorSensorV3 name="upperleftcolorsensor" port="0" bus="3" />-->
<!--            <RevColorSensorV3 name="uppermiddlecolorsensor" port="0" bus="1" />-->
<!--            <RevColorSensorV3 name="upperrightcolorsensor" port="0" bus="2" />-->

        </LynxModule>
        <LynxModule name="Control Hub" port="173">

            <goBILDA5202SeriesMotor name="flm" port="0" />
            <goBILDA5202SeriesMotor name="blm" port="1" />
            <goBILDA5202SeriesMotor name="elevator" port="2" />
            <goBILDA5202SeriesMotor name="intake" port="3" />

            <Servo name = "aimer" port = "0" />
            <Servo name = "rgbleft" port = "1" />
            <Servo name = "rgbmiddle" port = "2" />


            <Servo name = "middleflipper" port = "4" />
            <Servo name = "leftflipper" port = "5" />

            <OctoQuadFWv3 name="octo" port="0" bus="1"/>
<!--            <LynxColorSensor name="lowerleftcolorsensor" port="0" bus="0" />-->
<!--            <LynxColorSensor name="lowermiddlecolorsensor" port="0" bus="2" />-->
<!--            <LynxColorSensor name="lowerrightcolorsensor" port="0" bus="3" />-->

            <DigitalDevice name="loaded" port="0" />

            <LynxEmbeddedIMU name="imu" port="0" bus="0" />

        </LynxModule>
    </LynxUsbDevice>
</Robot>



